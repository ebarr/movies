<h3>Leave a comment</h3>


<%= label_tag "rating" %>
<br>
<select class="rating">
    <option value="0">1 Stars - Hated</option>
    <option value="1">2 Stars</option>
    <option value="2">3 Stars</option>
    <option value="3">4 Stars</option>
    <option value="4"  selected="selected">5 Stars</option>
    <option value="5">6 Stars</option>
    <option value="6">7 Stars</option>
    <option value="7">8 Stars</option>
    <option value="8">9 Stars</option>
    <option value="9">10 Stars - Loved</option>
</select>
<br>
<%= label_tag "comments" %>
<br>
<%= text_field_tag "comments" %>
<br>
<%= submit_tag "Submit!" %>

